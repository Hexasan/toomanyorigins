{
  "type": "origins:multiple",
  "hover": {
    "type": "toomanyorigins:hover",
    "step_assist": 0.6,
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "toomanyorigins:velocity",
          "y": 0.0,
          "comparison": ">="
        },
        {
          "type": "toomanyorigins:key_pressed",
          "key": {
            "key": "key.jump",
            "continuous": true
          }
        },
        {
          "type": "origins:climbing",
          "inverted": true
        },
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:water",
          "comparison": ">",
          "compare_to": "0",
          "inverted": true
        },
        {
          "type": "origins:fluid_height",
          "fluid": "minecraft:lava",
          "comparison": ">",
          "compare_to": "0",
          "inverted": true
        },
        {
          "type": "origins:fall_flying",
          "inverted": true
        },
        {
          "type": "origins:riding",
          "inverted": true
        },
        {
          "type": "origins:food_level",
          "comparison": ">",
          "compare_to": 6
        },
        {
          "type": "origins:power_active",
          "power": "*:*_toggle_resource"
        }
      ]
    }
  },
  "deplete_hunger_while_using": {
    "type": "origins:action_over_time",
    "entity_action": {
      "type": "origins:and",
      "actions": [
        {
          "type": "origins:if_else",
          "condition": {
            "type": "toomanyorigins:moving"
          },
          "if_action": {
            "type": "origins:exhaust",
            "amount": 0.08
          },
          "else_action": {
            "type": "origins:exhaust",
            "amount": 0.04
          }
        },
        {
          "type": "origins:if_else",
          "condition": {
            "type": "origins:resource",
            "resource": "*:*_prevention_state",
            "comparison": "==",
            "compare_to": 0
          },
          "if_action": {
            "type": "origins:change_resource",
            "resource": "*:*_prevention_state",
            "change": 1,
            "operation": "SET"
          }
        }
      ]
    },
    "interval": 1,
    "condition": {
      "type": "origins:power_active",
      "power": "*:*_hover"
    }
  },
  "toggle_resource": {
    "type": "origins:toggle",
    "active_by_default": true,
    "key": {
      "key": "key.origins.primary_active"
    }
  },
  "prevention_state": {
    "type": "origins:resource",
    "min": 0,
    "max": 1
  },
  "prevention_reset": {
    "type": "origins:action_over_time",
    "rising_action": {
      "type": "origins:change_resource",
      "resource": "*:*_prevention_state",
      "change": 0,
      "operation": "SET"
    },
    "condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:on_block"
        },
        {
          "type": "origins:resource",
          "resource": "*:*_prevention_state",
          "comparison": "==",
          "compare_to": 1
        }
      ]
    }
  },
  "prevent_items": {
    "type": "origins:prevent_item_use",
    "item_condition": {
      "type": "origins:and",
      "conditions": [
        {
          "type": "origins:ingredient",
          "ingredient": {
            "tag": "toomanyorigins:unusable_while_hovering"
          }
        },
        {
          "type": "origins:enchantment",
          "enchantment": "minecraft:riptide",
          "comparison": "==",
          "compare_to": 0
        }
      ]
    },
    "condition": {
      "type": "origins:or",
      "conditions": [
        {
          "type": "origins:power_active",
          "power": "*:*_hover"
        },
        {
          "type": "origins:and",
          "conditions": [
            {
              "type": "origins:on_block",
              "inverted": true
            },
            {
              "type": "origins:resource",
              "resource": "*:*_prevention_state",
              "comparison": "==",
              "compare_to": 1
            }
          ]
        }
      ]
    }
  },
  "badges": [
    {
      "type": "toomanyorigins:defined_keybind",
      "sprite": "origins:textures/gui/badge/active.png",
      "text": "origins.gui.badge.active",
      "key": {
        "key": "key.jump"
      }
    },
    {
      "sprite": "origins:textures/gui/badge/toggle.png",
      "text": "origins.gui.badge.toggle"
    }
  ]
}